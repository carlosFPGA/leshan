<!-- 
Production configuration: Minimal logging for performance measurements
Only WARN and ERROR logs are shown to minimize performance impact
-->
<configuration>
	<appender name="TERMINAL" class="org.eclipse.leshan.demo.cli.interactive.TerminalAppender">
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<layout class="org.eclipse.leshan.demo.logback.ColorAwarePatternLayout">
				<pattern>%gray(%d) %gray(%-20logger{0}) [%highlight(%p)] %m %yellow(%X) %n</pattern>
			</layout>
		</encoder>
	</appender>

	<root level="WARN">
		<appender-ref ref="TERMINAL" />
	</root>
	
	<!-- Only essential loggers for production/performance testing -->
	<logger name="org.eclipse.leshan" level="WARN"/>
	<!-- ClientServlet: Only WARN/ERROR for performance measurements -->
	<logger name="org.eclipse.leshan.demo.server.servlet.ClientServlet" level="WARN"/>
	<logger name="org.eclipse.leshan.transport.californium.LwM2mCoapResource" level="WARN"/>
	<logger name="org.eclipse.leshan.server.security.SecurityCheck" level="WARN"/>
	<logger name="org.eclipse.leshan.core.model.LwM2mModelRepository" level="WARN"/>
</configuration>

